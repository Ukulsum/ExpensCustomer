@model IEnumerable<ExpensCustomer.Models.Customer>

@{
    ViewData["Title"] = "Customers List";
}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Customers List</h2>
    </div>
    <div class="col-6">
        <a asp-action="Create" class="btn btn-success">Create New Customer</a>
    </div>
</div>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
                <td>

                    <div class="btn-group">
                        <button type="button" class="btn btn-info">Action</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>  <a class="dropdown-item" asp-action="Edit" asp-route-id="@customer.Id">Edit</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@customer.Id">Details</a></li>
                            <li> <a class="dropdown-item" asp-action="Delete" asp-route-id="@customer.Id">Delete</a></li>
                        </ul>
                    </div>
                  </td>
            </tr>
        }
    </table>
</div>

