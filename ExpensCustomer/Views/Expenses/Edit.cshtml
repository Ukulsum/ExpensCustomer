@model ExpensCustomer.Models.Expense

@{
    ViewData["Title"] = "Edit Expense";
}

<br />

<h2 class="text-info text-center">Update Expense</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row mb-2">
            <div class="col-1">
                <label>Customer</label>
            </div>
            <div class="col-7">
                <select asp-for="CustomerId" asp-items="ViewBag.CustomerId" class="form-control">
                    <option selected></option>
                </select>
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-1">
                <label>Expense Date</label>
            </div>
            <div class="col-7">
                <input asp-for="ExpenseDate" type="date" class="form-control" />
            </div>
            <span asp-validation-for="ExpenseDate" class="text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-1">
                <label asp-for="Note"></label>
            </div>
            <div class="col-7">
                <textarea class="form-control" placeholder="Note here" asp-for="Note"></textarea>
                
                @* <input asp-for="Email" class="form-control" /> *@
            </div>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
        <h4>Expense Items</h4>
        <table class="table table-bordered" id="expenseItemsTable">
            <thead>
                <tr>
                    <th class="col-3">Type</th>
                    <th class="col-3">Amount</th>
                    <th class="col-3">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ExpenseItems.Count; i++)
                {
                    <tr>
                        <td><input asp-for="ExpenseItems[@i].ExpenseType" class="form-control" /></td>
                        <td><input asp-for="ExpenseItems[@i].Amount" class="form-control" /></td>
                        <td><button type="button" class="btn btn-danger removeItem">Remove</button></td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="button" id="addItem" class="btn btn-secondary">Add Item</button>

        <br /><br />
        <div class="text-center">
            <button type="submit" class="btn btn-success">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
        
    </div>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        var index = @Model.ExpenseItems.Count;
        $('#addItem').click(function(){
            var row = `<tr>
                <td><input name="ExpenseItems[${index}].ExpenseType" class="form-control" /></td>
                <td><input name="ExpenseItems[${index}].Amount" class="form-control" /></td>
                <td><button type="button" class="btn btn-danger removeItem">Remove</button></td>
            </tr>`;
            $('#expenseItemsTable tbody').append(row);
            index++;
        });

        $(document).on('click', '.removeItem', function(){
            $(this).closest('tr').remove();
        });
    </script>
}





