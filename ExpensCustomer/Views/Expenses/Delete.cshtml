@model ExpensCustomer.Models.Expense

@{
    ViewData["Title"] = "Delete";
}


<h2 class="text-info text-center">Delete </h2>
<h3 class="text-danger">Are you sure you want to delete this?</h3>


<div class="p-4 rounded border">

    <p><strong>Customer:</strong> @Model.Customer.Name</p>
    <p><strong>Date:</strong> @Model.ExpenseDate.ToShortDateString()</p>
    <p><strong>Note:</strong> @Model.Note</p>

    <h4>Expense Items</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Expense Type</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ExpenseItems)
            {
                <tr>
                    <td>@item.ExpenseType</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </tbody>
    </table>

    @* <a asp-action="Index" class="btn btn-secondary">Back</a> *@
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>

    </div>


