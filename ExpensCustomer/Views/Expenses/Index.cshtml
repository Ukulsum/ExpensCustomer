@model IEnumerable<ExpensCustomer.Models.Expense>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Expense List</h2>
    </div>
    <div class="col-6">
        <a asp-action="Create" class="btn btn-success">Create New Expense</a>
    </div>
</div>
<div>
    <table class="table table-striped table-bordered">
        <tr class="table-info">
            <th>Customer</th>
            <th>Date</th>
            <th>Note</th>
            <th>Expense Items</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Customer?.Name</td>
                <td>@item.ExpenseDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Note</td>
                <td>
                    @if (item.ExpenseItems != null && item.ExpenseItems.Any())
                    {
                        <ul>
                            @foreach (var s in item.ExpenseItems)
                            {
                                <li>@s.ExpenseType - @s.Amount</li>
                            }
                        </ul>
                    }
            </td>
            <td>
                @(item.ExpenseItems != null
                                ? item.ExpenseItems.Sum(e => e.Amount)
                                : 0)
            </td>
            <td>

                    <div class="btn-group">
                        <button type="button" class="btn btn-info">Action</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>  <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                            <li> <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                            @* <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-action="CustomerWise" asp-route-id="@item.CustomerId">Customer Wise Expenses</a></li> *@
                        </ul>
                    </div>
                </td>
        </tr>
                }
       
    </table>
</div>



