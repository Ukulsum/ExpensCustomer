@model ExpensCustomer.Models.Expense


@{
    ViewData["Title"] = "Create Expense";
}

<br />

<h2 class="text-info text-center">Create Expense</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row mb-2">
            <div class="col-1">
                <label>Customer</label>
            </div>
            <div class="col-7">
                <select asp-for="CustomerId" asp-items="ViewBag.CustomerId" class="form-control">
                    <option selected></option>
                </select>
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-1">
                <label>Expense Date</label>
            </div>
            <div class="col-7">
                <input asp-for="ExpenseDate" type="date" class="form-control" />
            </div>
            <span asp-validation-for="ExpenseDate" class="text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-1">
                <label asp-for="Note"></label>
            </div>
            <div class="col-7">
                <textarea class="form-control" placeholder="Note here" asp-for="Note"></textarea>
                @* <input asp-for="Email" class="form-control" /> *@
            </div>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
        <h4>Expense Items</h4>
        <table id="expenseItemsTable">
            <thead>
                <tr>
                    <th class="col-3">Type</th>
                    <th class="col-3">Amount</th>
                    <th class="col-3">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="col-3"><input name="ExpenseItems[0].ExpenseType" placeholder="Type" class="form-control" /></td>
                    <td class="col-3"><input name="ExpenseItems[0].Amount" placeholder="Amount" type="number" step="0.01" class="form-control" /></td>
                    <td class="col-3"><button type="button" class="btn btn-danger">Remove</button></td>
                </tr>
            </tbody>
        </table>
        <button type="button" id="addItem" class="btn btn-primary mt-1">Add Item</button>

        <div class="form-group text-center">
            <input type="submit" class="btn btn-success" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>


@section Scripts{
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    let index = 1;
    $("#addItem").click(function(){
        $("#expenseItemsTable tbody").append(
            `<tr>
                        <td class="col-3"><input name="ExpenseItems[${index}].ExpenseType" placeholder="Type" class="form-control"/></td>
                        <td class="col-3"><input name="ExpenseItems[${index}].Amount" placeholder="Amount" type="number" step="0.01" class="form-control"/></td>
                            <td class="col-3"><button type="button" class="btn btn-danger">Remove</button></td>
            </tr>`
        );
        index++;
    });

    $(document).on('click', '.removeItem', function(){
        $(this).closest('tr').remove();
    });
</script>
}


